.root {
    flex-direction: row;
    height: 40px;
    align-items: center;
    min-height: 40px;
    justify-content: space-between;
    flex-grow: 1;
    overflow: hidden;
    align-content: auto;
    align-self: auto;
    padding-left: 5px;
}

.report-label {
    flex: 1 1 0;
    overflow: hidden;
    text-overflow: ellipsis;
    -unity-text-align: middle-left;
}

.report-count-container {
    flex: 1 1 0;
    width: 80px;
    align-items: auto;
    flex-direction: row;
    min-width: 80px;
    max-width: 80px;
    align-self: auto;
    align-content: auto;
    height: auto;
    min-height: auto;
    max-height: 50px;
    margin-right: -30px;
}

.report-count {
    flex: 1 1 0;
    background-color: rgb(84, 142, 195);
    text-overflow: ellipsis;
    -unity-text-align: middle-center;
    white-space: nowrap;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    border-bottom-left-radius: 8px;
    width: 40px;
    align-self: flex-start;
    min-width: 40px;
    max-width: 40px;
    overflow: hidden;
    height: 20px;
    min-height: 20px;
}
